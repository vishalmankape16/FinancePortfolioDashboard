@model IEnumerable<FinancePortfolioDashboard.Models.Portfolio>

<h2>Portfolios</h2>

<table style="width:100%; border-collapse:collapse; margin-bottom:20px;">
    <thead style="background-color:#4CAF50; color:white;">
        <tr>
            <th style="padding:10px; border:1px solid #ddd;">Name</th>
            <th style="padding:10px; border:1px solid #ddd;">Description</th>
            <th style="padding:10px; border:1px solid #ddd;">Category</th>
            <th style="padding:10px; border:1px solid #ddd;">Initial Investment</th>
            <th style="padding:10px; border:1px solid #ddd;">Start Date</th>
            <th style="padding:10px; border:1px solid #ddd;">Risk Level</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td style="padding:10px; border:1px solid #ddd;">@p.Name</td>
                <td style="padding:10px; border:1px solid #ddd;">@p.Description</td>
                <td style="padding:10px; border:1px solid #ddd;">@p.Category</td>
                <td style="padding:10px; border:1px solid #ddd;">@p.InitialInvestment.ToString("C")</td>
                <td style="padding:10px; border:1px solid #ddd;">@p.StartDate.ToShortDateString()</td>
                <td style="padding:10px; border:1px solid #ddd;">@p.RiskLevel</td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Portfolios" asp-action="Create" style="padding:10px 20px; background-color:#4CAF50; color:white; text-decoration:none; border-radius:5px;">Create New Portfolio</a>
