@model FinancePortfolioDashboard.Models.Portfolio

<h2>Create Portfolio</h2>

<form asp-controller="Portfolios" asp-action="Create" method="post" style="max-width:500px; margin:auto; padding:20px; border:1px solid #ccc; border-radius:10px;">
    <div style="margin-bottom:10px;">
        <label>Name:</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" style="color:red"></span>
    </div>
    <div style="margin-bottom:10px;">
        <label>Description:</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" style="color:red"></span>
    </div>
    <div style="margin-bottom:10px;">
        <label>Category:</label>
        <select asp-for="Category" class="form-control">
            <option value="">--Select Category--</option>
            <option>Stocks</option>
            <option>Bonds</option>
            <option>Mutual Funds</option>
            <option>Real Estate</option>
        </select>
        <span asp-validation-for="Category" style="color:red"></span>
    </div>
    <div style="margin-bottom:10px;">
        <label>Initial Investment ($):</label>
        <input asp-for="InitialInvestment" type="number" class="form-control" />
        <span asp-validation-for="InitialInvestment" style="color:red"></span>
    </div>
    <div style="margin-bottom:10px;">
        <label>Start Date:</label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" style="color:red"></span>
    </div>
    <div style="margin-bottom:10px;">
        <label>Risk Level:</label>
        <select asp-for="RiskLevel" class="form-control">
            <option value="">--Select Risk--</option>
            <option>Low</option>
            <option>Medium</option>
            <option>High</option>
        </select>
        <span asp-validation-for="RiskLevel" style="color:red"></span>
    </div>
    <div style="text-align:center;">
        <button type="submit" style="padding:10px 20px; background-color:#4CAF50; color:white; border:none; border-radius:5px;">Create</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
